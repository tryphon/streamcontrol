
<%= title_tag t(".title") %>

<% for stream in @streams %>
  <h3><a href="#"><%= link_to stream.name, stream_path(stream) %></a></h3>
  <div class="description">
    <p>
      URL: <%= stream.url %>
    </p>
  </div>
  <div class="actions">
    <%= link_to t("actions.show"), stream, :class => "view" %>
    <%= link_to t("actions.edit"), edit_stream_path(stream), :class => "edit" %>
  </div>
<% end %>

<div class="inline_help">
  <p>
    <%= render :partial => 'index_inline_help' %>
  </p>
</div>

<div class="actions">
  <%= link_to t(".actions.create"), new_stream_path, :class => "create" %>
</div>
