<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="fr">
  <head>
    <title>StreamBox - <%= title %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link href="/stylesheets/reset.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/tryphon.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/boxcontrol.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/application.css" media="screen" rel="stylesheet" type="text/css" />
  </head>
  <body class="<%= controller.controller_name %> <%= controller.action_name %>">
    <ul id="access">
      <li><a href="#content">Aller au contenu</a></li>
      <li><a href="#sidebar">Aller au menu</a></li>
    </ul>
    <hr/>
    <div id="header">
      <div>
        <ul id="menu">
          <li><%= link_to t(".dashboard"), dashboard_path %></li>
          <li><a href="#"><%= t(".help") %></a></li>
        </ul>
      </div>
    </div>
    <hr/>
    <div id="frame">
      <%= flash_tag(flash) %>

      <div id="content">
        <%= yield %>
      </div>
      <hr/>
      <div id="sidebar">
        <h2>StreamBox<sup>beta</sup></h2>

        <ul>
          <li><%= link_to t("streams.index.title"), streams_path %></li>
          <li><%= link_to t("events.index.title"), events_path %></li>
          <li><%= link_to Metadata.human_name, metadata_path %></li>
        </ul>
        <ul>
          <li><%= link_to Input.human_name, input_path %></li>
          <li><%= link_to Network.human_name, networks_path %></li>
          <li><%= link_to Icecast.human_name, icecast_path %></li>
          <li><%= link_to Ssh.human_name, ssh_path %></li>
          <li><%= link_to Log.human_name, log_path %></li>
          <li><%= link_to SavePoint.human_name, new_save_point_path %></li>
          <li><%= link_to Box::Release.human_name, releases_path %></li>
        </ul>

        <p class="languages">
          <%= links_to_languages %>
        </p>

        <h2><%= t(".information.title") %></h2>
        <p>
          <%= t(".information.text") %>
        </p>

      </div>
    </div>
    <hr/>
    <div id="footer">
      <div>
        &nbsp;
      </div>
    </div>
    <%= javascript_include_tag :defaults %>
    <%= user_voice_feedback %>
  </body>
</html>
